<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Opencart App Test Suite" verbose="4" thread-count="3" parallel="tests">


	<test name="Login Page Test_chrome">
